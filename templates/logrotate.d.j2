# {{ ansible_managed }}

{% if item.path is defined %}
{% for path in item.path %}
{{ path }}
{% endfor %}
{% endif %} {
{% if item.options is defined %}
{% for option in item.options %}
  {{ option }}
{% endfor %}
{% endif %}
{% if item.olddir is defined %}
  olddir {{ item.olddir }}
  createolddir
{% endif %}
{% if item.scripts is defined %}
{% for type, script in item.scripts.iteritems() %}
  {{ type }}
    {{ script }}
  endscript
{% endfor %}
{% endif %}
}
