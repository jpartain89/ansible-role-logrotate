# {{ ansible_managed }}

{% if item.path is defined %}
{% for path in item.path %}
{{ path }}
{% endfor %}
{% endif %} {
{% if item.options is defined %}
{% for option in item.options %}
  {{ option }}
{% endfor %}
{% endif %}
{% if item.extra_options.olddir is defined %}
  olddir {{ item.extra_options.olddir }}
{% endif %}
{% if item.extra_options.create is defined %}
  create {{ item.extra_options.create.mode }} {{ item.extra_options.create.user }} {{ item.extra_options.create.group }}
{% endif %}
{% if item.olddir is defined %}
  olddir {{ item.olddir }}
  createolddir
{% endif %}
{% if item.scripts is defined %}
  sharedscripts
{% for type, script in item.scripts.items() %}
  {{ type }}
    {{ script }}
  endscript
{% endfor %}
{% endif %}
}
